      <TextField fx:id="txtEmail" layoutX="13.0" layoutY="180.0" prefHeight="35.0" prefWidth="325.0" promptText="Enter E - Mail" />
      <Button fx:id="btnRegister" layoutX="77.0" layoutY="371.0" mnemonicParsing="false" onAction="#btnRegisterOnAction" prefHeight="35.0" prefWidth="196.0" style="-fx-background-color: #00b33c;" text="Register" textFill="WHITE">
