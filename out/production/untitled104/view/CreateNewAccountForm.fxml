<AnchorPane fx:id="root" prefHeight="450.0" prefWidth="350.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CreateNewAccountController">
   
   <children>
      <Label layoutX="63.0" layoutY="5.0" prefHeight="17.0" prefWidth="260.0" text="Create New Account" textFill="#0f0028" underline="true">
