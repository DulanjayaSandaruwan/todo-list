      <PasswordField fx:id="txtConfirmPassword" layoutX="14.0" layoutY="304.0" onAction="#txtConfirmPasswordONAction" prefHeight="35.0" prefWidth="325.0" promptText="Confirm Password" />
      <Label fx:id="lblNotMatch" layoutX="177.0" layoutY="340.0" prefHeight="27.0" prefWidth="163.0" text="Password does not match..." textFill="#eb0101">
         <font>
            <Font size="13.0" />
         </font>
      </Label>
      <Label layoutX="207.0" layoutY="82.0" text="User ID :" />
      <Label fx:id="lblID" layoutX="259.0" layoutY="82.0" prefHeight="17.0" prefWidth="80.0" />
