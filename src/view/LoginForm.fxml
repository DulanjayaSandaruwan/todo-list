      <Label layoutX="78.0" layoutY="419.0" text="Designed By : Dulanjaya Sandaruwan" textFill="#28002c" />
      <PasswordField fx:id="txtPassword" layoutX="15.0" layoutY="185.0" onAction="#txtPasswordOnAction" prefHeight="31.0" prefWidth="317.0" promptText="Enter Password" />
